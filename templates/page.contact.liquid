<div class="col-md-12 second_part">
		
		<div class="col-sm-6 contacts_page__1">
			
			<div class="contacts_page__left">
				<span class="homepage_counter homepage_counter__hidden">{% increment homepageBlocks %}</span>
				<span class="homepage_counter homepage_counter__blog">{% increment homepageBlocks %}</span>

				<h1 class="page_heading">{{ page.title }}</h1>

				<div class="rte">
					{{ page.content }}
				</div>

				
			</div>
		</div>


		<div class="col-sm-6 contacts_page__2">
			
			<h3>Get in touch</h3>

			<div class="form_big">
				{% form 'contact' %}
					{% if form.posted_successfully? %}
					<div class="alert alert-success">
						<p>{% assign X = 'other_pages.contact_page.success_message' | t %}{% if X.size > 0 %}{{ X }}{% else %}Thanks for contacting us! We'll get back to you as soon as possible.{% endif %}</p>
					</div>
					{% endif %}

					{% if form.errors %}
					<div class="alert alert-warning">
						<!-- {{ form.errors.size }} or {{ form.errors | size }} -->
						<p>{% assign X = 'other_pages.contact_page.error_message' | t %}{% if X.size > 0 %}{{ X }}{% else %}Oops, sorry. We were unable to submit your inquiry because it contained errors. Please correct the following and submit again:{% endif %}</p>
						{% for field in form.errors %}
						<p>{{ field | capitalize | replace: 'Body', 'Message' }} â€” {{ form.errors.messages[field] }}</p>
						{% endfor %}
					</div>
					{% endif %}

					<div id="contactFormWrapper">
						{% if customer %}
							<input type="hidden" name="contact[name]" value="{{ customer.first_name }} {{ customer.last_name }}">
							<input type="hidden" name="contact[email]" value="{{ customer.email }}">
						{% else %}
							<input required type="text" class="form-control" id="contactFormName" name="contact[name]" placeholder="{% assign X = 'other_pages.contact_page.name' | t %}{% if X.size > 0 %}{{ X }}{% else %}Your Name{% endif %}" />
							<input required type="email" class="form-control" id="contactFormEmail" name="contact[email]" placeholder="{% assign X = 'other_pages.contact_page.email' | t %}{% if X.size > 0 %}{{ X }}{% else %}Email{% endif %}" />
							
						{% endif %}

						<textarea required class="form-control" rows="5" cols="75" id="contactFormMessage" name="contact[body]" placeholder="{% assign X = 'other_pages.contact_page.message' | t %}{% if X.size > 0 %}{{ X }}{% else %}Message{% endif %}"></textarea>

						<button type="submit" class="btn btn_send btn-outline homepage_btn" id="contactFormSubmit">{% assign X = 'other_pages.contact_page.submit_button' | t %}{% if X.size > 0 %}{{ X }}{% else %}Send{% endif %}</button>
						<button type="reset" class="btn btn_clear btn-outline homepage_btn">{% assign X = 'other_pages.contact_page.clear_button' | t %}{% if X.size > 0 %}{{ X }}{% else %}Clear{% endif %}</button>
					</div><!-- contactFormWrapper -->
				{% endform %}
			</div>
		</div>
	</div>

</div>
